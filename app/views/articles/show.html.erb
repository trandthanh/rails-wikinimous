<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 text-center">
      <div class="title">
        <h1>
          <%= @article.title %>
          <%= link_to edit_article_path do  %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to article_path(@article), method: :delete, data: {confirm: "Are you sure?"} do  %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </h1>
      </div>
      <hr>
      <div class="content">
        <p><%= @article.content  %></p>
      </div>
    </div>
  </div>
</div>
