<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h1>New article</h1>
      <%= form_for @article do |a| %>
        <div class="form-group">
          <%= a.label :title %>
          <%= a.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= a.label :content %>
          <%= a.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= a.submit 'Create Article', class: "btn btn-info" %>
        </div>
      <% end  %>
      <div>
        <%= link_to articles_path do  %>
        Back
        <% end %>
      </div>
    </div>
  </div>
</div>
